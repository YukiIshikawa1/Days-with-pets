<% posts.each do |image| %>
  <div class="image">
    <%= link_to post_path(image) do %>
      <%= attachment_image_tag image, :post_image, size:"600x400" %>
    <% end %>  
  </div>
  
  <div class="title">
    タイトル：<%= image.title %>
  </div>
  
  <div class="text">
    本文：<%= image.text %>
  </div> 
  
  <div class="favorite">
    いいね：<%= image.favorites.count %>
  </div>
  
<% end %>
<div class="paginate">
  <%= paginate(posts) %>
</div>