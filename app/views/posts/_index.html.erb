<% posts.each do |image| %>
  <div class="image-post">
    <%= link_to post_path(image) do %>
      <%= attachment_image_tag image, :post_image, size:"600x400" ,class: 'pet-image' %>
    <% end %>  
  </div>
  
  <div class="title">
    タイトル：<%= image.title %>
  </div>
  
  <div class="text">
    本文：<%= image.text %>
  </div> 
  
  <div class="favorite mb-5">
    いいね：<%= image.favorites.count %>  コメント：<%= image.comments.count %>
  </div>
  
<% end %>
<div class="paginate">
  <%= paginate  (posts) %>
</div>