<div class="container">
  <h2>新規投稿</h2>

     <%= form_with model: @post,url:posts_path, local: true do |f| %>
      <div class="row">
        <table>
        <div class="col-12">
          <tr>
            <th><%=f.label :image, "画像投稿" %></th>
            <td></td>
          </tr> 
        </div>
        
        <div class="col-12">
          <tr>
            <th><%=f.label :title, "題名" %></th>
            <td><%= f.text_field :title, placeholder:"タイトル" %></td>
          </tr> 
        </div>  
        
        <div class="col-12">
          <tr>
            <th><%=f.label :text, "本文" %></th>
            <td><%= f.text_area :text, placeholder:"本文" %></td>
          </tr> 
        </div> 
        
        <div class="col-12">
          <tr>
            <th><%=f.label :genre_id, "動物の種類" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :animal_type, prompt: "--選択してください--" %></td>
          </tr> 
        </div>    
        
         <div class="col-12">
          <tr>
            <th><%=f.label :genre_id, "種類別" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :type, prompt: "--選択してください--" %></td>
          </tr> 
        </div> 
        
        <div class="col-12">
          <tr>
            <th><%=f.label :genre_id, "動物の種類が無ければ" %></th>
            <td><%= f.text_field :animal_type, placeholder:"動物の種類" %></td>
          </tr> 
        </div>  
        
        <div class="col-12">
          <tr>
            <th><%= f.submit "新規投稿" , class:"btn btn-success" %></th>
          </tr> 
        </div>
        
    </div>
  </div>  
  <% end %>
</div>

  