<div class="container">
  <h2>新規投稿</h2>

     <%= form_with model: @post,url:posts_path, local: true do |f| %>
      <div class="row">
        
        <table>
        <div class="col-12">
          <tr>
            <th><%=f.label :image, "画像投稿" %></th>
            <td><%=f.attachment_field :post_image, class: "form-control-file post_image" %></td>
          </tr> 
        </div>
        
        <div class="col-12">
          <tr>
            <th><%=f.label :title, "題名" %></th>
            <td><%= f.text_field :title, placeholder:"タイトル" %></td>
          </tr> 
        </div>  
        
        <div class="col-12">
          <tr>
            <th><%=f.label :text, "本文" %></th>
            <td><%= f.text_area :text, placeholder:"本文" %></td>
          </tr> 
        </div> 
        
        <div class="col-12">
          <tr>
            <th><%= f.submit "新規投稿" , class:"btn btn-success" %></th>
          </tr> 
        </div>
        
    </div>
  </div>  
  <% end %>
</div>

  