<div class="container">
  <div class="row mt-3">
    <div >
      <%= render "users/info", user: @user %> 
    </div>  
    
    <div class="col-md-7">
      <% @posts.each do |image| %>
        <div class="image">
          <%= link_to post_path(image) do %>
            <%= attachment_image_tag image, :post_image, size:"600x400" %>
          <% end %>  
        </div>
        
        <div class="title">
          <%= image.title %>
        </div>
        
        <div class="text">
          <%= image.text %>
        </div> 
      <% end %>
    </div>  
    
    <div class="col-2">
      <h2>動物の種類</h2>
      <% @genres.each do |genre| %>
        <div class="category text-center p-2">
          <%= link_to genre.animal_type %>
        </div>  
      <% end %>  
    </div>  
    
  </div>
</div>