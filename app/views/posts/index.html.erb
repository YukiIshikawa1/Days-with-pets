<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render "users/info", user: @user %> 
    </div>  
    
    <div class="col-md-9">
      <% @posts.each do |image| %>
        <div class="image">
          <%= link_to post_path(image) do %>
            <%= attachment_image_tag image, :post_image, size:"600x400" %>
          <% end %>  
        </div>
        
        <div class="title">
          <%= image.title %>
        </div>
        
        <div class="text">
          <%= image.text %>
        </div> 
            <% end %>
    </div>    
  </div>
</div>