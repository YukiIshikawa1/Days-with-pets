<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render "users/info", user: @user %> 
    </div>  
    
    <div class="col-md-9 mx-auto">
      <div class="title text-center">
        <strong><h3><%= @post.title %></h3></strong>
      </div>
      <% if current_user == @post.user %>
      <div>
        <%= link_to "投稿編集",edit_post_path(@post.id), class:"btn btn-success"  %>
      </div>  
      <% end %>

      
      <div class="post_image">
        <%= attachment_image_tag @post, :post_image,size: "800x500" %>
      </div>
      <table class="table">
        <tr>
          <th>本文</th> 
          <th class="post-text ">
            <%= @post.text %>
          </th>
        </tr>
        
        <tr class="post-genre">  
          <th>ペットの名前</th> 
          <th>
             <%= @pet.name %>
          </th>
        </tr>      
        
        <tr class="post-genre">  
          <th>ペットの種類</th> 
          <th>
             <%= @pet.genre %>
          </th>
        </tr>
      
        <tr class="post-genre-type">
          <th>品種</th> 
            <th>
              <%= @pet.category %>
            </th>
        </tr>
        
      </table>
      <!--ここにコメント関係を-->
      <div id="post_favorite_<%= @post.id %>">
        <%= render "favorites/favorite", post: @post %>
      </div>
      
        
    <% if user_signed_in? %>
        <div class="comment-create">
            <h3 class="text-left">レビューを投稿する</h3>
            <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
        </div>
    <% end %>
    
      <div class="row">
        <div class="col-12">
        <div id="comments_area">
            <%= render partial: 'comments/index', locals: { comments: @comments } %>
        </div>
        </div>
  </div>
</div>  
</div> 
</div> 