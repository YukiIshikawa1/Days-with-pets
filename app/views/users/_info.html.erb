<table class="table">
  
  <tr>
    <th>
      <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :user_image, :fill, 100, 100, fallback: "No_image.jpeg" ,size:"100x100"%>
      <% end %>  
    </th>
    <td>
      <% if current_user == user %>
        <%= link_to "編集",edit_user_path(user.id), class: "btn btn-success" %>
      <% end %>  
    </td>
    
  </tr>
  
  <tr>
    <th>投稿者</th>
    <th><%= user.name %></th>  
  </tr>
    <tr>
    <th>フォロー</th>
    <th>
      <%= link_to follower_user_path(user.id) do %>
      <%= user.follower_user.count %>
      <% end %>
    </th>  
  </tr>
  
  <tr>
    <th>フォロワー</th>
    <th>
      <%= link_to followed_user_path(user.id) do %>
      <%= user.following_user.count %>
      <% end %>      
    </th>  
  </tr>
  
</table>

<div>
  <% if current_user != user %>
  　<% if current_user.following?(user) %>
    　<%= link_to 'フォロー外す', user_relationship_path(user.id), method: :delete, class: "btn btn-default" %>
    <% else %>
    　<%= link_to 'フォローする', user_relationships_path(user.id), method: :POST , class: "btn btn-primary"%>
    <% end %>
  <% end %>
</div>  
