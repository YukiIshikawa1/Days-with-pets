<table class="table">
  <tr><%= attachment_image_tag user, :user_image, :fill, 100, 100, fallback: "No_image.jpeg" %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>  
  </tr>
  
  <tr>
    <th>follows</th>
    <th>
      <%= link_to follower_user_path(user_id) do %>
      <%= user.follwings.count %>
      <% end %>
    </th>  
  </tr>
  
  <tr>
    <th>followers</th>
    <th>
      <%= link_to followed_user_path(user_id) do %>
      <%= user.follwers.count %>
      <% end %>      
    </th>  
  </tr>
  
  </table>
  
  <div class="row">
    <% if current_user == user %>
      <%= link_to '', edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
    <% end %>
    <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), id: "destroy" , method: :delete, class: "btn btn-info" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), id: "create" , method: :post, class: "btn btn-success" %>
    <% end %>
    <% end %>
  </div>  