<div class="container text-center">
  <div class="row mt-3">
    <% if current_user == @pet.id %>
    <div class="col-md-12">
      <% @pets.each do |pet| %>
        <div class="image">
          <h2><%= pet.name %></h2>
          <%= link_to pet_path(pet.id) do %>
            <%= attachment_image_tag pet, :pet_image, size:"600x400" %>
          <% end %> 
          <% end %>
        </div>
    </div>    
    <% end %>
  </div>
</div>