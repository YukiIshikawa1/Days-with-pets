<div class="index-background">
<div class="container text-center">
  <div class="row mt-3">
    <div class="col-md-12">
      
      <% if flash[:notice] %>
       <p id="notice">
      <%= flash[:notice] %>
        </p>
      <% end %>
        
      <% @pets.each do |pet| %>
      
        <div class="user-name">
        <p class="pet-show-user"><%= pet.user.nick_name %>さんのペット達</p>
        </div>
      
        <div class="image">
          <h2><%= pet.name %></h2>
          <%= link_to user_pet_path(current_user,pet.id) do %>
            <%= attachment_image_tag pet, :pet_image, size:"500x500" %>
          <% end %> 
        </div>  
      <% end %>
    </div>    
  </div>
</div>
</div>