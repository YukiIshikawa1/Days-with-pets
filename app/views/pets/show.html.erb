<div class="container pt-5">
  <div class="pet-show-bg p-5">  
      <% if flash[:notice] %>
        <p id="notice">
      <%= flash[:notice] %>
        </p>
      <% end %>

  <h2>ペット詳細</h2>
  <h3>飼い主：
    <%= link_to user_path(@pet.user) do %>
      <%= @pet.user.nick_name %>
    <% end %> 
  </h3>  
  
      <div class="row">
        <table class="table">     
          <tbody>
            
          <div class="form-group">
            <tr>
              <th>ペット画像</th>
              <td>
                <%= attachment_image_tag @pet, :pet_image, size:"400x400" ,class: 'pet-image' %>  
              </td> 
            </tr>
          </div>  
           
            <tr>
              <th><h4>名前</h4></th>
              <td><h4><%= @pet.name %></h4></td>
            </tr>

            <tr>
              <th><h4>動物の種類</h4></th>
              <td><h4><%= @pet.genre %></h4></td>
            </tr>
          
            <tr>
              <th><h4>動物の品種</h4></th>
              <td><h4><%= @pet.category %></h4></td>
            </tr>
          
            <tr>
              <th><h4>性別</h4></th>
              <td><h4><%= @pet.gender %></h4></td>
            </tr>
          
            <tr>
              <th><h4>年齢</h4></th>
              <td><h4><%= @pet.age %>才</h4></td>
            </tr>            
  
            <tr>
              <th><h4>投稿数</h4></th>
              <td><h4><%= @pet.posts.count %>件</h4></td>
            </tr>            
          
            <tr>
              <th><%= link_to "投稿一覧",posts_path , class:"btn btn-primary" %></th>
              <% if current_user == @pet.user %>
              <td>
                <%= link_to "ペット編集",edit_user_pet_path(@pet.user_id,@pet.id) , class: "btn btn-success" %>
                <%= link_to "削除", user_pet_path(current_user,@pet.id), method: :delete, data:{confirm:"本当に削除しますか？"} ,class: "btn btn-danger"  %>
              </td>             
              <% end %>    
            </tr>            
          
            <tr>
              <th><%= link_to "会員ペット一覧",user_pets_path(@pet.user_id,@pet.id) ,class:"btn btn-primary" %></th>
            </tr>            
          
          </tbody>
        </table>            
      </div>
  </div>
</div>