<% if user_signed_in? %>
    <% if current_user.already_favorite?(post) %>
        <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
            いいね<i class="fa fa-heart" aria-hidden="true" style="color: red; font-size:20px;">
                <%= post.favorites.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to post_favorites_path(post), method: :post, remote: true do %>
            いいね<i class="fa fa-heart" aria-hidden="true" style="color: #0000FF; font-size:20px;">
                <%= post.favorites.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true">
            <%= post.favorites.count %>
    </i>
<% end %>